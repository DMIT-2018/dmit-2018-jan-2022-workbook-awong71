<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/holiday.css@0.9.8" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <ul>
                <li>
                    @*add a logo to the menu taking on to the Home page (Index)*@
                    <a asp-area="" asp-page="/Index">
                        <img src="~/img/barley-1920.jpg" style="width: 3rem" alt ="Chinook logo" title ="Go to Home"/>
                        </a>
                        
                </li>
                @*

                *@
                <li>
                    <span>Samples</span>
                    <ul>
                        <li>
                            <a asp-area="" asp-page="/SamplePages/Basics">Basics</a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a asp-area="" asp-page="/Privacy">Privacy</a>
                </li>
            <partial name="_LoginPartial" />
            </ul>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
       &copy;Jan 2022 - Chinook WebApp - NAIT DMIT2018 Learning Sample (all rights reserved)
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>